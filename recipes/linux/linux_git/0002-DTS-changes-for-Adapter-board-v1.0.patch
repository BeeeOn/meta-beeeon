From 9bf766ed20c27b50326b90f29ed96edb81124108 Mon Sep 17 00:00:00 2001
From: Tomas Novotny <tomas@novotny.cz>
Date: Fri, 24 Oct 2014 13:56:51 +0200
Subject: [PATCH] DTS changes for Adapter-board v1.0

---
 arch/arm/boot/dts/sun4i-a10-olinuxino-lime.dts | 38 ++++++++++++++++++++++++--
 1 file changed, 35 insertions(+), 3 deletions(-)

diff --git a/arch/arm/boot/dts/sun4i-a10-olinuxino-lime.dts b/arch/arm/boot/dts/sun4i-a10-olinuxino-lime.dts
index 68febb9..3563285 100644
--- a/arch/arm/boot/dts/sun4i-a10-olinuxino-lime.dts
+++ b/arch/arm/boot/dts/sun4i-a10-olinuxino-lime.dts
@@ -12,6 +12,7 @@
 /dts-v1/;
 /include/ "sun4i-a10.dtsi"
 /include/ "sunxi-common-regulators.dtsi"
+#include <dt-bindings/input/input.h>
 
 / {
 	model = "Olimex A10-OLinuXino-LIME";
@@ -43,9 +44,9 @@
 			status = "okay";
 		};
 
-		spi2: spi@01c17000 {
+		spi0: spi@01c05000 {
 			pinctrl-names = "default";
-			pinctrl-0 = <&spi2_pins_b>;
+			pinctrl-0 = <&spi0_pins_a>;
 			status = "okay";
 
 			spidev@0x00 {
@@ -91,11 +92,17 @@
 			};
 
 			led_pins_olinuxinolime: led_pins@0 {
-				allwinner,pins = "PH2";
+				allwinner,pins = "PH2", "PI0";
 				allwinner,function = "gpio_out";
 				allwinner,drive = <1>;
 				allwinner,pull = <0>;
 			};
+
+			btn_pins_olinuxinolime: btn_pins@0 {
+				allwinner,pins = "PI18";
+				allwinner,function = "gpio_in";
+				allwinner,pull = <0>;
+			};
 		};
 
 		uart0: serial@01c28000 {
@@ -159,6 +166,13 @@
 				};
 			};
 		};
+		i2c2: i2c@01c2b400 {
+			pinctrl-names = "default";
+			pinctrl-0 = <&i2c2_pins_a>;
+			status = "okay";
+
+			/* Add RTC + EEPROM here */
+		};
 	};
 
 	leds {
@@ -171,6 +185,24 @@
 			gpios = <&pio 7 2 0>;
 			default-state = "on";
 		};
+
+		pan {
+			label = "a10-olinuxino-lime:pancoordinator:usr";
+			gpios = <&pio 8 0 0>;
+			default-state = "on";
+		};
+	};
+
+	gpio_keys {
+		compatible = "gpio-keys";
+		pinctrl-names = "default";
+		pinctrl-0 = <&btn_pins_olinuxinolime>;
+
+		btn-ol {
+			label = "BTN_OL";
+			gpios = <&pio 8 18 0>;
+			linux,code = <KEY_F1>;
+		};
 	};
 
 	reg_ahci_5v: ahci-5v {
